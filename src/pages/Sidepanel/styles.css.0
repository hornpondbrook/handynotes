.sidepanel {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.sidepanel-content {
  flex: 1;
  padding: 16px;
  overflow-y: auto;
}

.section-card {
  background: #fff;
  border-radius: 8px;
  box-shadow: 0 2px 4px rgb(0 0 0 / 10%);
  margin-bottom: 16px;
}

.section-header {
  background-color: #f8f8f8;
  padding: 8px 12px;
  border-bottom: 1px solid #ddd;
  border-radius: 8px 8px 0 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section-header:hover {
  background-color: #f0f0f0;
}

.section-header h2 {
  font-size: 16px;
  margin: 0;
  color: #333;

  /* cursor: pointer; */
}

.section-items {
  display: flex;
  flex-direction: column;
  gap: 8px;
  padding: 8px;
}

.shortcut-item {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 4px;
  border-bottom: 1px solid #eee;
}

.shortcut-item:last-child {
  border-bottom: none;
}

.shortcut {
  background: #f5f5f5;
  padding: 4px 8px;
  border-radius: 4px;
  font-family: monospace;
  font-size: 12px;
  border: 1px solid #ddd;
}

.description {
  font-size: 14px;
  color: #666;
}

.drop-indicator {
  height: 2px;
  background-color: blue;
  margin: 2px 0;
}

