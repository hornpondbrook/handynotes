{
  "manifest_version": 3,
  "name": "Handy Notes React",
  "version": "1.0.0",
  "description": "Handy notes of keyboard shortcuts and anything noteworthy/memorable through a convenient side panel.",
  "permissions": [
    "activeTab",
    "commands",
    "sidePanel",
    "storage"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; font-src 'self' https://fonts.gstatic.com;"
  },
  "background": {
    "service_worker": "background.bundle.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "content.styles.css",
        "icon16.png",
        "icon48.png",
        "icon128.png"
      ],
      "matches": []
    }
  ],
  "author": "HornPondBrook",
  "homepage_url": "https://github.com/hornpondbrook/handynote",
  "minimum_chrome_version": "116"
}